; Polybar Config
; vim:ft=dosini

[colors]
background = ${xrdb:background}
background-alt = ${xrdb:color8}
foreground = ${xrdb:foreground}
foreground-alt = #fff
primary = ${xrdb:cursorColor}
secondary = ${xrdb:color14}
alert = #bd2c40

[bar/main]
monitor = ${env:MONITOR:DVI-I-1}
width = 100%
height = 27
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "Arimo Nerd Font:pixelsize=11;2:antialias=true"
font-1 = "Font Awesome 5 Free:style=solid:size=10;3"

line-size = 2
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

modules-left = i3
modules-center = xwindow
modules-right = cpu temperature memory storage openvpn date

tray-position = right
tray-detached = false
tray-padding = 2
; tray-transparent = false
tray-background = ${colors.background}

cursor-click = pointer
cursor-scroll = ns-resize

[bar/secondary]
inherit = bar/main
monitor = ${env:MONITOR}
modules-center =
modules-right =
tray-position = none

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%

label-focused-background = ${colors.background}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = %{F#81A1C1}%{F-}
format-prefix-foreground = ${colors.foreground-alt}
; format-underline = ${xrdb:color6}
label = " %percentage:2%%"

[module/memory]
type = internal/memory
interval = 2
format-prefix = %{F#A3BE8C}%{F-}
format-prefix-foreground = ${colors.foreground-alt}
; format-underline = ${xrdb:color2}
label = " %gb_used%"

[module/eth]
type = internal/network
interface = enp3s0
interval = 3.0

; format-connected-underline = ${xrdb:color3}
format-connected-prefix =
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

[module/storage]
type = custom/script
interval = 5
format-prefix = %{F#B48EAD}%{F-}
; format-underline = ${xrdb:color4}
exec = ~/.config/polybar/scripts/storage.sh
label = " %output%"

[module/temperature]
type = internal/temperature
interval = 2
thermal-zone = 2
warn-temperature = 60

format = <label>
format-prefix = %{F#D08770}%{F-}
; format-underline = ${xrdb:color1}
label = " %temperature-c%"

[module/openvpn]
type = custom/script
interval = 5
format-prefix = %{F#D08770}ﱾ%{F-}
; format-underline = ${xrdb:color4}
exec = ~/.config/polybar/scripts/openvpn.sh
label = " %output%"

[module/date]
type = internal/date
interval = 2

date = "%H:%M"
date-alt = " %d-%m-%Y"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = %{F#8FBCBB}%{F-}
; format-underline = ${xrdb:color9}
label = " %date%"

[settings]
screenchange-reload = true
